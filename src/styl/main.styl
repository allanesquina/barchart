body
  font 12px arial

svg
    margin-top 150px
    cursor pointer

.label-border
    fill #a9a8a7

.label-text
    fill #a9a8a7
    font-weight bold

.bar
  fill #e8ae00
  stroke-width 1
  stroke #ccc
	&:hover
  		fill #333

#tooltip
	&.show
	    visibility visible
	    opacity 1
		
#tooltip
    position absolute
    text-align center
    border-bottom 2px solid #333
    top 100px
    min-width 100px
    visibility hidden
    transition .2s
    opacity 0
	.date
	    display block
	    color #999
	    margin-bottom 5px
	.amount
	    display block
	    color #000
	    font-weight bold
	    font-size 18px
	    margin-bottom 10px
